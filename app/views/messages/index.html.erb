
<% @messages.each do |message| %>
 <div class="col-md-4" onmouseenter="this.style.backgroundColor='#990000'" onmouseleave="this.style.background=''">
   <div class="message">
     <h3 class="message-title"><%= message.title %></h3>
    <%= link_to "View Message", message_path(message), class: "btn-custom" %>
    </div>
 </div>
  

<% end %>  
